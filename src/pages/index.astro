---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';

import Main from '~/components/widgets/Main.astro';
import About from '~/components/widgets/About.astro';
import Experience from '~/components/widgets/Experience.astro';
import Steps from '~/components/widgets/Steps.astro';
import Projects from '~/components/widgets/Projects.astro';
import HighlightedPosts from '~/components/blog/HighlightedPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import Contact from '~/components/widgets/Contact.astro';
import AOS from 'aos';
import 'aos/dist/aos.css'; // You can also use <link> for styles

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
	<script is:inline src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
	<script>AOS.init({once:true});</script>
	<Main />
	<About />
	<!-- <Steps /> -->
	<Projects />
	<Experience />
	<!-- <HighlightedPosts /> -->
	<!-- <FAQs /> -->
	<!-- <Stats /> -->
	<Contact />
</Layout>
